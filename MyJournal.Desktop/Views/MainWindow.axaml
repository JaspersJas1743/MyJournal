<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:MyJournal.Desktop.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
        x:DataType="vm:MainWindowVM" Classes="MainWindow"
        x:Class="MyJournal.Desktop.Views.MainWindowView"
        Icon="/Assets/Resources/Images/logo.ico"
        MinWidth="1200" MinHeight="700"
        Title="Электронный журнал">
        <TransitioningContentControl Content="{Binding Path=MainVM,Mode=OneWay}"/>
</Window>
