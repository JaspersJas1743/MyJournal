<UserControl xmlns="https://github.com/avaloniaui"
			xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			xmlns:vm="clr-namespace:MyJournal.Desktop.ViewModels.ConfirmationCode"
			xmlns:lottie="clr-namespace:Avalonia.Labs.Lottie;assembly=Avalonia.Labs.Lottie"
			mc:Ignorable="d" d:DesignWidth="630" d:DesignHeight="275"
			x:DataType="vm:SuccessConfirmationVM"
			x:Class="MyJournal.Desktop.Views.ConfirmationCode.SuccessConfirmationView">
	<Grid ColumnDefinitions="20*, 590*, 20*" RowDefinitions="20*, 150*, 20*, 25*, 30*">
		<lottie:Lottie Grid.Column="1" Grid.Row="0" Path="/Assets/Resources/Animations/Success.json" RepeatCount="1"
						VerticalAlignment="Center" HorizontalAlignment="Center" Grid.RowSpan="4"/>
		<TextBlock	Grid.Row="3" Grid.Column="1" Text="{Binding Text}"
					Classes="ProfileSectionSubheader CenteredTextBlock" xml:space="preserve">
		</TextBlock>
	</Grid>
</UserControl>
