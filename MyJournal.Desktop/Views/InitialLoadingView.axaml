<UserControl xmlns="https://github.com/avaloniaui"
			xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			xmlns:lottie="clr-namespace:Avalonia.Labs.Lottie;assembly=Avalonia.Labs.Lottie"
			xmlns:viewModels="clr-namespace:MyJournal.Desktop.ViewModels"
			mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1025"
			x:DataType="viewModels:InitialLoadingVM"
			x:Class="MyJournal.Desktop.Views.InitialLoadingView">
	<StackPanel Orientation="Vertical" >
		<lottie:Lottie Path="/Assets/Resources/Animations/InitialLoading.json" HorizontalAlignment="Center" Width="300"/>
		<TextBlock Text="{Binding LoadingText,Mode=TwoWay}" FontSize="24" HorizontalAlignment="Center"/>
	</StackPanel>
</UserControl>
