<Styles xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:controls="clr-namespace:MyJournal.Desktop.Assets.Controls"
		x:DataType="controls:XamlSvg">

	<Style Selector="controls|XamlSvg.Minus">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate>
					<Image OpacityMask="{Binding RelativeSource={RelativeSource Mode=TemplatedParent},Path=Foreground}">
						<Image.Source>
							<DrawingImage>
								<DrawingImage.Drawing>
									<DrawingGroup ClipGeometry="M0,0 V75 H572 V0 H0 Z">
										<DrawingGroup Opacity="1" Transform="0.1,0,0,-0.1,0,75">
											<GeometryDrawing Brush="{Binding RelativeSource={RelativeSource Mode=TemplatedParent},Path=Foreground}" Geometry="F1 M572,75z M0,0z M203,652C74,607 0,502 0,366 0,243 60,146 168,93L225,65 2860,65 5495,65 5552,93C5660,146 5720,243 5720,365 5720,487 5660,584 5552,637L5495,665 2875,667C380,669,253,669,203,652z" />
										</DrawingGroup>
									</DrawingGroup>
								</DrawingImage.Drawing>
							</DrawingImage>
						</Image.Source>
					</Image>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
		<Style Selector="^.Horizontal">
			<Setter Property="RenderTransform" Value="rotate(90deg)"/>
		</Style>
	</Style>

</Styles>
