<Styles xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Style Selector="SelectableTextBlock">
		<Setter Property="FontFamily" Value="{StaticResource ResourceKey=Raleway}"/>
		<Setter Property="FontWeight" Value="SemiBold"/>
		<Setter Property="FontFeatures" Value="+lnum"/>
		<Setter Property="SelectionBrush" Value="{DynamicResource MainAccentColor}"/>
		<Setter Property="Transitions">
			<Transitions>
				<BrushTransition Property="Foreground" Duration="0:0:0.2"/>
			</Transitions>
		</Setter>
		<Style Selector="^.Message">
			<Setter Property="FontSize" Value="20"/>
			<Setter Property="TextWrapping" Value="Wrap"/>
			<Setter Property="VerticalAlignment" Value="Center"/>
			<Setter Property="MaxWidth" Value="510"/>
			<Setter Property="HorizontalAlignment" Value="Left"/>
			<Setter Property="TextAlignment" Value="Left"/>
		</Style>
	</Style>
</Styles>
