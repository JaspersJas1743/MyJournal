<Styles xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Style Selector="Border">
		<Setter Property="BorderThickness" Value="0" />
		<Setter Property="BorderBrush" Value="Transparent" />
		<Setter Property="ClipToBounds" Value="True" />
		<Setter Property="Transitions">
			<Transitions>
				<DoubleTransition Duration="0:0:0.2" Property="Height" />
			</Transitions>
		</Setter>
		<Style Selector="^.TransitionBorderBrush">
			<Setter Property="Transitions">
				<Transitions>
					<BrushTransition Property="BorderBrush" Duration="0:0:0.2"/>
				</Transitions>
			</Setter>
		</Style>
		<Style Selector="^.TransitionBackground">
			<Setter Property="Transitions">
				<Transitions>
					<BrushTransition Property="Background" Duration="0:0:0.2"/>
				</Transitions>
			</Setter>
		</Style>
		<Style Selector="^.OpacityTransition">
			<Setter Property="Transitions">
				<Transitions>
					<DoubleTransition Property="Opacity" Duration="0:0:0.2"/>
				</Transitions>
			</Setter>
		</Style>
		<Style Selector="^.ProfileSection">
			<Setter Property="CornerRadius" Value="30"/>
			<Setter Property="BorderThickness" Value="5"/>
			<Setter Property="BorderBrush" Value="{DynamicResource StrokeColor}"/>
		</Style>
		<Style Selector="^.Dialogs">
			<Setter Property="CornerRadius" Value="20"/>
			<Setter Property="BorderThickness" Value="5"/>
			<Setter Property="BorderBrush" Value="{DynamicResource StrokeColor}"/>
		</Style>
		<Style Selector="^.Session">
			<Setter Property="CornerRadius" Value="20"/>
			<Setter Property="BorderThickness" Value="5"/>
			<Setter Property="BorderBrush" Value="{DynamicResource StrokeColor}"/>
		</Style>
		<Style Selector="^.MenuBorder">
			<Setter Property="Height" Value="140"/>
			<Setter Property="Width" Value="590"/>
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="Margin" Value="0 0 0 -100"/>
			<Style Selector="^:pointerover">
				<Setter Property="Margin" Value="0 0 0 0"/>
			</Style>
			<Setter Property="Transitions">
				<Transitions>
					<ThicknessTransition Property="Margin" Duration="0:0:0.2"/>
				</Transitions>
			</Setter>
			<Style Selector="^ Border.Menu">
				<Setter Property="Margin" Value="20"/>
				<Setter Property="BorderBrush" Value="{DynamicResource StrokeColor}"/>
				<Setter Property="BorderThickness" Value="5"/>
				<Setter Property="Background" Value="{DynamicResource InputBackgroundColor}"/>
				<Setter Property="CornerRadius" Value="30"/>
			</Style>
		</Style>
	</Style>
</Styles>
