<Styles xmlns="https://github.com/avaloniaui"
		xmlns:controls="clr-namespace:MyJournal.Desktop.Assets.Controls"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Style Selector="controls|XamlSvg.CenteredSvg">
		<Setter Property="VerticalAlignment" Value="Center"/>
		<Setter Property="HorizontalAlignment" Value="Center"/>
		<Setter Property="FocusAdorner" Value="{x:Null}" />
	</Style>

	<Style Selector="controls|XamlSvg.TransitionForeground">
		<Setter Property="Transitions">
			<Transitions>
				<BrushTransition Property="Foreground" Duration="0:0:0.2"/>
			</Transitions>
		</Setter>
	</Style>
</Styles>
